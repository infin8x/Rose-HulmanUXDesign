<Window x:Class="MyTVCompanion.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="SettingsWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="Search for a TV show" Margin="0,0,5,0"  />
                <Button Grid.Column="1" Content="Search" Width="39"/>
            </Grid>
            <ListView>
                <ListView.Items>
                    <ListViewItem Content="Search result" />
                    <ListViewItem Content="Search result" />
                    <ListViewItem Content="Search result" />
                    <ListViewItem Content="Search result" />
                </ListView.Items>
            </ListView>
            <Button Content="Add selected show"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label HorizontalAlignment="Center" Content="My shows" />
            <ListView>
                <ListView.Items>
                    <ListViewItem Content="Example show" />
                    <ListViewItem Content="Example show" />
                    <ListViewItem Content="Example show" />
                    <ListViewItem Content="Example show" />
                </ListView.Items>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
